type User {
  id: ID! @id
  userName: String! @unique
  email: String! @unique
  lastName: String @default(value: "last name")
  firstName: String @default(value: "first name")
  posts: [Post!]!
  likes: [Like!]!
  bio: String!
  comment: [Comment!]!
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
  chat: [Chat!]!
  loginSecret: String!
}
type Post {
  id: ID! @id
  files: [File!]!
  location: String!
  caption: String!
  user: User!
  likes: [Like!]!
  comment: [Comment!]!
}
type Like {
  id: ID! @id
  user: User!
  post: Post!
}
type Comment {
  id: ID! @id
  text: String!
  user: User!
  post: Post!
}

type File {
  id: ID! @id
  url: String!
  post: Post!
}

type Chat {
  id: ID! @id
  participants: [User!]!
  message: [Message!]!
}

type Message {
  id: ID! @id
  text: String!
  from: User! @relation(name: "From")
  to: User! @relation(name: "To")
  chat: Chat!
}